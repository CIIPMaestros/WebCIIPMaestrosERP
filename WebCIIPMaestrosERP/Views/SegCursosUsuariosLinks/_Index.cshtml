@using WebCIIPMaestrosERP.Models;
@model List<SegCursoUsuarioLinksCLS>





<table class="table border-bottom table-hover table-striped">
    <thead>
        <tr>
            <th width="10%">@Html.LabelFor(p => Model[0].CUS_ID)</th>
            <th width="20%">@Html.LabelFor(p => Model[0].CUR_NOMBRE)</th>
            <th width="5%">@Html.LabelFor(p => Model[0].USU_NOMBRES)</th>
            <th width="10%">@Html.LabelFor(p => Model[0].USU_LINK_CORTO)</th>
            <th width="20%">OPERACIONES</th>

        </tr>
    <thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CUS_ID</td>
                <td>@item.CUR_NOMBRE</td>
                <td>@item.USU_NOMBRES</td>
                <td>@item.USU_LINK_CORTO</td>
                <td>


                    <a href="#myModalCurso" class="edit" onclick="Editar(@item.CUS_ID)" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                    <a href="#ModalConfirmacion" class="delete" onclick="ActivarDesactivar(@item.CUS_ID)" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Activar">&#xe003;</i></a>
                    <a href="#ModalActivar" class="active" onclick="ActivarDesactivar(@item.CUS_ID)" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>

                </td>
            </tr>
        }
    </tbody>
</table>




