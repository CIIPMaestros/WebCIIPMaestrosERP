
@using WebCIIPMaestrosERP.Models;
@model List<SegUsuariosLinksCLS>

@{
    ViewBag.Title = "Links Disponible";
}

<h2>LinkDisponible</h2>


<table class="table border-bottom table-hover">
    <thead>
        <tr>
            
            <th class="col-lg-1" style="width: 50%;">Curso</th>
            <th>Link</th>
            <th>OPERACIONES</th>
        </tr>
    <thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            
            <td>@item.CUR_DESCRIPCION</td>
            <td>@item.USU_LINK_CORTO</td>



            <td>

                <button type="button" onclick="VerLink(@item.CUS_ID)" class="btn btn-warning glyphicon glyphicon-link" data-toggle="modal" data-target="#ModalVerLink">
                </button>


                
            </td>
        </tr>
        }
    </tbody>
</table>