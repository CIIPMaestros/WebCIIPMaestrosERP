@model WebCIIPMaestrosERP.Models.PrvDocenteSeguimiento
@Html.AntiForgeryToken()
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Seguimiento Prospecto</h3>
            <a href="#" class="close" data-dismiss="modal">&times;</a>
        </div>
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-sm-6 col-lg-6 col-md-6">
                    <div class="form-group">
                        <label class="control-label col-10"> Tipo: </label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control", @id = "SgmTipo" } })
                            @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-6 col-md-6">
                    <div class="form-group">
                        <label class="control-label col-10"> Comentario: </label>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SgmComentario, new { htmlAttributes = new { @class = "form-control", @id = "SgmComentario" } })
                            @Html.ValidationMessageFor(model => model.SgmComentario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
                <button class="btn btn-success btnSgmSeguimiento">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
